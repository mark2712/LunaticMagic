
.lang-card {
    padding: 12px;
    background-color: #ffffff30;
    border-radius: 6px;
    color: #000000;
}

.lang-title {
    font-size: 14px;
    margin-bottom: 8px;
}

.lang-tiles {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 6px;
}

.lang-tiles Button {
    min-width: 48px;
    padding: 6px 10px;
    border-radius: 4px;
    background-color: #fcfcfc;
    color: #000000;
}

.lang-tiles Button.selected {
    background-color: #4c7cff;
    color: white;
}

